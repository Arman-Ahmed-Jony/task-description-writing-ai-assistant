{
    "manifest_version": 3,
    "name": "Gemini AI Assistant",
    "version": "1.0",
    "description": "Access Gemini AI models with your API key",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "options_page": "settings.html",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "https://generativelanguage.googleapis.com/*"
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }